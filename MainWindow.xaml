        </Viewbox>
        <Viewbox Grid.Row="1" Grid.Column="20" Grid.ColumnSpan="3">
            <Label Content="Ошибка" Foreground="red" Visibility="{Binding Path=GazVis}"/>
        </Viewbox>
       

