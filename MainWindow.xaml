            <Label Content="E1 V=25m³"/>
        </Viewbox>
        <Viewbox Grid.Row="4" Grid.Column="9" Grid.ColumnSpan="3" Grid.RowSpan="3">
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Уровень"/>
                    <Label Content="{Binding Path=E1_level}"/>
                    <Label Content="мм"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Объем"/>
                    <Label Content="{Binding Path=VoliumeE1}"/>
                    <Label Content="m³"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Масса"/>
                    <Label Content="{Binding Path=MassaE1}"/>
                    <Label Content="т"/>
                </StackPanel>
                <Label Content="Предельный уровень" Foreground="Red" Visibility="{Binding Path=ShowAlarmLevelE1}"/>
                <Label  Content="Ошибка уровнемера" Foreground="Red" Visibility="{Binding Path=ErrorLevelE1}"/>
            </StackPanel>

        </Viewbox>
        <Viewbox Grid.Row="11" Grid.Column="11" Grid.ColumnSpan="3">
            <Label Content="E2 V=50m³"/>
        </Viewbox>
        <Viewbox Grid.Row="12" Grid.Column="11" Grid.ColumnSpan="3" Grid.RowSpan="3">
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Уровень"/>
                    <Label Content="{Binding Path=E2_level}"/>
                    <Label Content="мм"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Объем"/>
                    <Label Content="{Binding Path=VoliumeE2}"/>
                    <Label Content="m³"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Масса"/>
                    <Label Content="{Binding Path=MassaE2}"/>
                    <Label Content="т"/>
                </StackPanel>
                <Label   Content="Предельный уровень" Foreground="Red" Visibility="{Binding Path=ShowAlarmLevelE2}"/>
                <Label   Content="Ошибка уровнемера" Foreground="Red" Visibility="{Binding Path=ErrorLevelE2}"/>
            </StackPanel>

        </Viewbox>
        <Viewbox Grid.Row="3" Grid.Column="18" Grid.ColumnSpan="5" Grid.RowSpan="3">
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Расход"/>
                    <Label Content="{Binding Path=Count_day}"/>
                    <Label Content="m³/сутки"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Расход"/>
                    <Label Content="{Binding Path=Count_hour}"/>
                    <Label Content="m³/час"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Мгновенный расход"/>
                    <Label Content="{Binding Path=Counter_in_sec}"/>
                    <Label Content="m³"/>
                </StackPanel>

            </StackPanel>

        </Viewbox>
        <Viewbox Grid.Row="18" Grid.Column="20" Grid.ColumnSpan="4">
            <Label Content="{Binding Path=ValvePos}"/>
        </Viewbox>
        <Viewbox Grid.Row="16" Grid.Column="24" Grid.ColumnSpan="3">
            <StackPanel Orientation="Horizontal">
                <Label Content="{Binding Path=HsCounter}"/>
                <Label Content="л"/>
            </StackPanel>

        </Viewbox>
