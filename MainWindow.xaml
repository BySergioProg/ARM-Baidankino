            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="8*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="3.5*"/>
                <RowDefinition Height="47*"/>
                <RowDefinition Height="2.8*"/>
            </Grid.RowDefinitions>

            <ProgressBar BorderThickness="4" Orientation="Vertical" Value="{Binding Path=FillingE1}" BorderBrush="{Binding Path=ColorE1}" Foreground="#FF571308" Grid.Row="1" Grid.Column="1" />
        </Grid>
        <Grid Grid.Row="10" Grid.Column="9" Grid.RowSpan="7">
            <Grid.RowDefinitions>
                <RowDefinition Height="9*"/>
                <RowDefinition Height="134*"/>
                <RowDefinition Height="11*"/>
            </Grid.RowDefinitions>
            <ProgressBar  Orientation="Vertical" Value="{Binding Path=FillingE2}" BorderBrush="{Binding Path=ColorE2}" Foreground="#FF571308" Grid.Row="1" BorderThickness="5" />

        </Grid>
