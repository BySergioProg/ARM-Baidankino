        </Viewbox>
        <Viewbox Grid.Row="12" Grid.Column="28" Grid.ColumnSpan="4" Stretch="Fill">
            <Button  Content=" Настройка " Click="SettingsShow"/>
        </Viewbox>
        <Viewbox Grid.Row="17" Grid.Column="1" Grid.ColumnSpan="4" Stretch="Fill">
